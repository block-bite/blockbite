{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "blockbite/heading",
  "version": "0.1.0",
  "title": "Heading",
  "category": "blockbite",
  "icon": "flag",
  "description": "heading block",
  "attributes": {
    "content": {
      "type": "string",
      "default": "Heading"
    },
    "textAlign": {
      "type": "string",
      "default": "text-left"
    },
    "textAlignDesktop": {
      "type": "string",
      "default": ""
    },
    "contentTag": {
      "type": "string",
      "default": "p"
    }
  },
  "supports": {
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "html": false,
    "color": {
      "gradients": true,
      "link": true,
      "background": true,
      "text": true
    },
    "dimensions": {
      "minHeight": true
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "letterSpacing": true,
      "textTransform": true,
      "fontFamily": true
    },
    "align": true
  },
  "textdomain": "blockbite",
  "editorScript": "file:./index.js"
}